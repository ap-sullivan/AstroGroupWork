---
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <style>
      body { font-family: sans-serif; margin: 0; }
      nav {
        background: #222;
        padding: 10px;
        position: sticky;
        top: 0;
      }
      nav a {
        color: white;
        margin-right: 10px;
        text-decoration: none;
      }
      nav a:hover {
        text-decoration: underline;
      }
      main { padding: 2rem; }
    </style>
  </head>
  <body>
    <nav>
      <a href="/">Home</a>
      <a href="/Presentation">Presentation</a>
      <a href="/Tutorial">Tutorial</a>
    </nav>
    <main>
      <slot /> <!-- This is where each page's content goes -->
    </main>
  </body>
</html>
